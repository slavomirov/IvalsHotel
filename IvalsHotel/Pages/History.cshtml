@page
@using IvalsHotel.Data.Models
@model IvalsHotel.Pages.HistoryModel
@{
}
<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3 d-flex gap-2">
    <input type="text" name="Search" value="@Model.Search" placeholder="Търси по описание" class="form-control" />
    
    <select name="TypeFilter" class="form-select" style="max-width: 200px;">
        <option value="">Всички типове</option>
        @foreach (var type in Enum.GetValues(typeof(LogType)))
        {
            <option value="@type" selected="@(Model.TypeFilter == (LogType)type ? "selected" : null)">
                @type
            </option>
        }
    </select>

    <button type="submit" class="btn btn-primary">Филтрирай</button>
    <button type="submit" formaction="?handler=Clear" class="btn btn-secondary">Изчисти</button>
</form>

<table class="table table-striped table-hover">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Тип</th>
            <th>Описание</th>
            <th>Дата</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Logs.Any())
        {
            @for(int i = 0; i < Model.Logs.Count(); i++)
            {
                <tr>
                    <td>@(Model.Logs.Count() - i)</td>
                    <td>@Model.Logs[i].Type</td>
                    <td>
                        @{
                            var desc = Model.Logs[i].Description;
                            if (desc.Contains("<br />"))
                            {
                                foreach (var item in desc.Split("<br />"))
                                {
                                    @item

                                    <br />
                                }
                            }
                            else
                            {
                                @desc
                            }
                        }
                    </td>
                    <td>@Model.Logs[i].Date.ToString("dd.MM.yyyy HH:mm")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center text-muted">Няма намерени записи</td>
            </tr>
        }
    </tbody>
</table>
